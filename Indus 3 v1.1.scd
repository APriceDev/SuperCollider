(

SynthDef(\Indus3, {

	arg fund = 261.63;
	var delta = MouseX.kr(fund, (fund*2), 1, 1.5),
	     bass = (0.25*(delta/1)),
	     sigF = SinOsc.ar(delta),
	     sigB = SinOsc.ar(SinOsc.kr( freq:1.25, add:bass));
	Out.ar(0,[sigF,sigB]!2);
}).add;

a = Synth(\Indus3);

a.free;
)

